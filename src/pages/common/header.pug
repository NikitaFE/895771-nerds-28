mixin navigation(navigation)
  ul.header__menu(class="main-menu")
    each item in navigation
      if item.active
        li.main-menu__item
          a.main-menu__link.main-menu__link--active #{item.name}
      else
        li.main-menu__item
          a.main-menu__link(href="" +item.link) #{item.name}

      //- li.main-menu__item
