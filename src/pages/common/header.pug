      //- li.main-menu__item
      //-   a.main-menu__link(href="contacts.html") Контакты

header.header
  nav.header__nav
    a.header__logo(class="logo" href="#")
      img(class="logo__img" src="https://placehold.it/160x65" width="160" height="65" alt="Логотип магазина 'Нёрдс'")
    +navigation(navigation)
    a.header__button(href="cart.html") Корзина
